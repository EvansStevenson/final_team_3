</head>

<body>
  <%- include('./includes/nav.ejs') %>


  <h1 class="">My Favorite Recipes</h1>

  <div class="grid">
    <% if (recipes.length > 0) { %>
      <% for (recipe of recipes) { %>
        <% if (recipe) {%> 
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" style="width: 100%;" src="/<%= recipe.imagePath %>" alt="<%= recipe.title %>">
            <div class="card-body">
              <p class="card-text"><%= recipe.title %></p>
              <a class="btn" href="/recipe/<%= recipe._id %>/info">View Recipe</a>
              <a class="btn" href="/recipe/<%= recipe._id %>/remove-favorite">Remove</a>
            </div>
          </div>
        <% } %> 
      <% } %>
    <% } %>
  </div>

  <%- include('./includes/end.ejs') %>